@model Library.Models.RentModel

@{
    ViewData["Title"] = "Dodaj wypożyczenie";
}

<main class="container">
    <div class="py-5 text-center">
        <h2>Nowe wypożyczenie</h2>
    </div>

    <div class="row">
        <div class="col-md-7 col-lg-8">
            <form asp-action="Add">
                <div class="form-group">
                        @Html.LabelFor(model => model.ClientId, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.ClientId, new SelectList(ViewBag.Clients, "ID", "Fullname"), "Wybierz klienta", new { @class = "form-control" })
                        <span asp-validation-for="ClientId" class="text-danger"></span>
                    </div>
                
                    <div class="form-group">
                        @Html.LabelFor(model => model.BookId, htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.BookId, new SelectList(ViewBag.Books, "ID", "Title"), "Wybierz książkę", new { @class = "form-control" })
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                    
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Dodaj</button>
            </form>
        </div>
    </div>
</main>